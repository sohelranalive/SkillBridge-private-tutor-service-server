model Users {
    user_id       String     @id @default(uuid())
    user_name     String
    user_email    String     @unique
    emailVerified Boolean    @default(false)
    user_phone    String
    user_image    String?
    user_role     UserRole
    user_status   UserStatus @default(ACTIVE)
    createdAt     DateTime   @default(now())
    updatedAt     DateTime   @updatedAt

    bookings Booking[]

    tutor TutorProfile[]
}

enum UserRole {
    ADMIN
    USER
    TUTOR
}

enum UserStatus {
    ACTIVE
    BANNED
}
