model TutorProfile {
  tutor_id       String             @id @default(uuid())
  user_id        String             @unique
  tutor_category String?
  subjects       String[]
  isFeatured     Boolean            @default(false)
  price          Int?
  about          String?
  education      String[]
  isVerified     Boolean            @default(false)
  language       String[]
  availability   AvailabilitySlot[]
  bookings       Booking[]
  reviews        Reviews[]
  category       Categories?        @relation(fields: [tutor_category], references: [category_id])
  user           User               @relation(fields: [user_id], references: [id])
}

model AvailabilitySlot {
  id         String       @id @default(uuid())
  tutor_id   String
  start_time DateTime
  end_time   DateTime
  subject    String
  tutor      TutorProfile @relation(fields: [tutor_id], references: [tutor_id])
  bookings   Booking[]

  @@unique([tutor_id, start_time, end_time, subject])
  @@index([tutor_id, start_time, end_time])
}

model Reviews {
  id         String       @id @default(uuid())
  tutor_id   String
  reviewText String
  student_id String
  ratings    Float
  createdAt  DateTime     @default(now())
  student    User         @relation(fields: [student_id], references: [id])
  tutor      TutorProfile @relation(fields: [tutor_id], references: [tutor_id])
}
